{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "lib": ["esnext"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
